{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "visualisation of sleep pattern",
  "title": {
    "text": "Quality and Amount of sleep per Night"
  },
  "data": {
    "url": "/data/calenderdata.json"
  },
  "width": 700,
  "height": 400,
  "mark": "bar",
  "encoding": {
    "y": {
      "timeUnit": "datemonth",
      "field": "start.dateTime",
      "type": "ordinal",
      "sort": "ascending",
      "title": "Days of the week"
    },
    "x": {
      "timeUnit": "hoursminutes",
      "field": "start.dateTime",
      "type": "temporal",
      "axis": {
        "title": "Time of the day"
      },
      "scale": {
        "nice": "day"
      }
    },
    "x2": {
      "timeUnit": "hoursminutes",
      "field": "end.dateTime",
      "type": "temporal"
    },
    "color": {
      "field": "colorId",
      "type": "nominal",
      "scale": {
        "domain": [
          "10",
          "11",
          "3",
          "5",
          "6",
          "9"
        ],
        "range": [
          "#229954",
          "#FF0000",
          "#6C3483",
          "#F4D03F",
          "#D35400",
          "#2471A3"
        ]
      },
      "title": "Activities"
      
    }
  }
}
